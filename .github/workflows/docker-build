name: Build & push Docker image
on:
  push:
    branches: [ main ]
  pull_request:
    branches: [ main ]

steps:
  - uses: actions/checkout@v2
    name: Check out code

    image: filmgirl82/auto-blog-poster
    registry: docker.io
    username: ${{ secrets.DOCKER_USERNAME }}
    password: ${{ secrets.DOCKER_PASSWORD }}
